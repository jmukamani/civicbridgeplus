{
  "name": "backend",
  "version": "1.0.0",
  "description": "A robust backend system for a civic engagement web application that bridges the policy-action divide. This API provides comprehensive functionality for user management, policy discussion, messaging, and analytics.",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": ".eslintrc.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "dev": "cross-env DEBUG=* nodemon server.js",
    "migrate:create": "sequelize migration:generate",
    "migrate:up": "sequelize db:migrate",
    "migrate:down": "sequelize db:migrate:undo",
    "migrate:reset": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "seed:create": "sequelize seed:generate",
    "seed:up": "sequelize db:seed:all",
    "seed:down": "sequelize db:seed:undo:all"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "redis": "^5.5.6",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3"
  }
}
